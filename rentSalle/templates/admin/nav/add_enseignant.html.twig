<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Ajouter un enseignant | Allocation des salles</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Interface utilisateur pour l'ajout d'un enseignant" name="description" />
    <meta content="Themesdesign" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">
    <!-- Bootstrap Css -->
    <link href="assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>

<body class="bg-white">
    <div class="auth-page d-flex align-items-center min-vh-100">
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-xxl-3 col-lg-4 col-md-5">
                    <div class="d-flex flex-column h-100 py-5 px-4">
                        <div class="text-center text-muted mb-2">
                            <div class="pb-3">
                                <a href="index.html">
                                    <span class="logo-lg">
                                        <img src="assets/images/logo-sm.svg" alt="" height="24"> <span class="logo-txt">Allocation des salles</span>
                                    </span>
                                </a>
                                <p class="text-muted font-size-15 w-75 mx-auto mt-3 mb-0">Interface utilisateur pour l'ajout d'un enseignant</p>
                            </div>
                        </div>

                        <div class="my-auto">
                            <div class="p-3 text-center">
                                <!-- Image d'illustration pour l'ajout d'un enseignant -->
                                <img src="assets/images/auth-img.png" alt="Image d'illustration" class="img-fluid">
                            </div>
                        </div>

                        <div class="mt-4 mt-md-5 text-center">
                            <p class="mb-0">© <script>document.write(new Date().getFullYear())</script> Alloc. salles</p>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-9 col-lg-8 col-md-7">
                    <div class="auth-bg bg-light py-md-5 p-4 d-flex">
                        <div class="bg-overlay-gradient"></div>
                        <!-- end bubble effect -->
                        <div class="row justify-content-center g-0 align-items-center w-100">
                            <div class="col-xl-4 col-lg-8">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="px-3 py-3">
                                            <div class="text-center">
                                                <h5 class="mb-0">Ajouter un enseignant</h5>
                                                <p class="text-muted mt-2">Veuillez remplir les informations de l'enseignant à ajouter.</p>
                                            </div>
                                            <form class="mt-4 pt-2">

                                            {{ form_start(form) }}
                                                <input type="text" class="form-control mb-3" placeholder="Nom" name="{{field_name (form.nom_professor)}}">
                                                <input type="text" class="form-control mb-3" placeholder="Prénom" name="{{field_name (form.prenom_professor)}}">
                                                <input type="text" class="form-control mb-3" placeholder="Post-Nom" name="{{field_name (form.post_nom)}}">
                                                
                                                <!-- Champ Genre -->
                                                <div class="mb-3">
                                                    <label for="genre" class="form-label">Genre :</label>
                                                    <select class="form-select" id="genre" name="{{field_name (form.genre)}}">
                                                        <option value="homme">Homme</option>
                                                        <option value="femme">Femme</option>
                                                        <option value="autre">Autre</option>
                                                    </select>
                                                </div>
                                                <!-- Fin Champ Genre -->
                                                
                                                <input type="text" class="form-control mb-3" placeholder="Grade" name="{{field_name (form.grade)}}">
                                                <input type="text" class="form-control mb-3" placeholder="Téléphone" name="{{field_name (form.telephone)}}">
                                                <input type="email" class="form-control mb-3" placeholder="E-mail" name="{{field_name (form.email)}}">
                                                
                                                <!-- Ajoutez d'autres champs de formulaire pour les informations de l'enseignant au besoin -->

                                                <div class="mt-3">
                                                    <button class="btn btn-primary w-100" type="submit">Ajouter</button>
                                                </div>

                                                {{ form_end(form) }}
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- JAVASCRIPT -->
    <script src="assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/libs/metismenujs/metismenujs.min.js"></script>
    <script src="assets/libs/simplebar/simplebar.min.js"></script>
    <script src="assets/libs/feather-icons/feather.min.js"></script>
    <!-- Incluez tout JavaScript supplémentaire si nécessaire -->
</body>

</html>
