    <body data-layout="horizontal" data-topbar="dark">

    <!-- <body data-layout="horizontal"> -->

        <!-- Begin page -->
        <div id="layout-wrapper">

            <div class="hori-overlay"></div>
            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">
                <div class="page-content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="card card-h-100">
                                    <div class="card-header justify-content-between d-flex align-items-center">
                                        <h4 class="card-title">Creer role</h4>
                                    </div><!-- end card header -->
                                    <div class="card-body">
                                        <div>
                                            <form method="POST">
                                                {{ form_start(form) }}
                                                <div class="mb-3">
                                                    <label class="form-label" for="formrow-firstname-input">{{ form_label(form.nom) }}</label>
                                                
                                                    <input type="text" class="form-control" name="{{field_name(form.nom)}}" id="formrow-firstname-input" placeholder="Nom du role">
                                                </div>

                                                 <div class="mb-3">
                                                    <label class="form-label" for="formrow-firstname-input">{{ form_label(form.postnom) }}</label>
                                                
                                                    <input type="text" class="form-control" name="{{field_name(form.postnom)}}" id="formrow-firstname-input" placeholder="Nom du role">
                                                </div>

                                                 <div class="mb-3">
                                                    <label class="form-label" for="formrow-firstname-input">{{ form_label(form.prenom) }}</label>
                                                
                                                    <input type="text" class="form-control" name="{{field_name(form.prenom)}}" id="formrow-firstname-input" placeholder="Nom du role">
                                                </div>

                                                     <div class="mb-3">
                                                    <label class="form-label" for="formrow-firstname-input">{{ form_label(form.genre) }}</label>
                                                    <select class="form-select" id="genre" name="{{field_name (form.genre)}}">
                                                        <option value="homme">Homme</option>
                                                        <option value="femme">Femme</option>
                                                        <option value="autre">Autre</option>
                                                    </select>               
                                                    
                                                    {# <input type="text" class="form-control" name="{{field_name(form.nom)}}" id="formrow-firstname-input" placeholder="Nom du role"> #}
                                                </div>

                                                 <div class="mb-3">
                                                    <label class="form-label" for="formrow-firstname-input">{{ form_label(form.grade) }}</label>
                                                
                                                    <input type="text" class="form-control" name="{{field_name(form.grade)}}" id="formrow-firstname-input" placeholder="Nom du role">
                                                </div>

                                                 <div class="mb-3">
                                                    <label class="form-label" for="formrow-firstname-input">{{ form_label(form.telephone) }}</label>
                                                
                                                    <input type="text" class="form-control" name="{{field_name(form.telephone)}}" id="formrow-firstname-input" placeholder="Nom du role">
                                                </div>

                                                 <div class="mb-3">
                                                    <label class="form-label" for="formrow-firstname-input">{{ form_label(form.email) }}</label>
                                                
                                                    <input type="text" class="form-control" name="{{field_name(form.email)}}" id="formrow-firstname-input" placeholder="Nom du role">
                                                </div>

                                                
                                              
                                                <div class="mt-4">
                                                
                                                    <button type="submit" class="btn btn-primary w-md">Creer</button>
                                                </div>

                                            {{ form_end(form) }}
                                            </form><!-- end form -->
                                        </div>
                                    </div><!-- end card body -->
                                </div><!-- end card -->
                            </div>
                        </div>
                        
                        <!-- end row -->

                    </div> <!-- container-fluid -->
                </div><!-- End Page-content -->

               
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->

